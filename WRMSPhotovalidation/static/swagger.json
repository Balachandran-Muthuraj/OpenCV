{
  "swagger": "2.0",
  "info": {
    "title": "Photo Validation API",
    "description": "API for validating and converting photos",
    "version": "1.0.0"
  },
  "paths": {
    "/validate_photo": {
      "post": {
        "summary": "Validate and Convert Photo",
        "description": "Uploads a photo for validation and conversion to base64",
        "parameters": [
          {
            "name": "file",
            "in": "formData",
            "description": "Image file to be validated",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "definitions": {
    "Response": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    }
  }
}
